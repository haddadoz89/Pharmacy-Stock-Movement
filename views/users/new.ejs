<%- include('../partials/_navbar') %>
<div class="container mt-5" style="max-width: 500px;">
  <h2 class="mb-4 text-center">Add New User</h2>
  <div class="card p-4">
    <form method="POST" action="/users">
      <div class="mb-3">
        <label class="form-label">Username</label>
        <input type="text" class="form-control" name="username" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" name="password" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Role</label>
        <select class="form-select" name="position" required>
          <option value="">Select a role</option>
          <option value="Head of Pharmacy">Head of Pharmacy</option>
          <option value="Senior Pharmacy">Senior Pharmacy</option>
          <option value="Pharmacist Incharge">Pharmacist Incharge</option>
          <option value="Pharmacist">Pharmacist</option>
          <option value="Senior Pharmacy Technician">Senior Pharmacy Technician</option>
          <option value="Pharmacy Technician">Pharmacy Technician</option>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Health Center</label>
        <select class="form-select" name="healthCenter" required>
          <option value="">Select a health center</option>
          <% healthCenters.forEach(center => { %>
            <option value="<%= center._id %>">
              <%= center.healthCenterName %>
            </option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary w-100">Create User</button>
    </form>
  </div>
</div>
