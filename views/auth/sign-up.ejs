<%- include('../partials/_navbar') %>

<div class="container mt-5" style="max-width: 500px;">
  <h2 class="mb-4 text-center">Sign Up</h2>

  <% if (error) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% } %>

  <form action="/auth/sign-up" method="POST">
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input type="text" class="form-control" name="username" id="username" required>
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" name="password" id="password" required>
    </div>

    <div class="mb-3">
      <label for="confirmPassword" class="form-label">Confirm Password</label>
      <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" required>
    </div>

    <div class="mb-3">
      <label for="position" class="form-label">Position</label>
      <select name="position" id="position" class="form-select" required>
        <option value="">Select a position</option>
        <option value="Head of Pharmacy">Head of Pharmacy</option>
        <option value="Senior Pharmacy">Senior Pharmacy</option>
        <option value="Pharmacist Incharge">Pharmacist Incharge</option>
        <option value="Pharmacist">Pharmacist</option>
        <option value="Senior Pharmacy Technician">Senior Pharmacy Technician</option>
        <option value="Pharmacy Technician">Pharmacy Technician</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="healthCenter" class="form-label">Health Center</label>
      <select name="healthCenter" id="healthCenter" class="form-select" required>
        <option value="">Select a health center</option>
        <% healthCenters.forEach(center => { %>
          <option value="<%= center._id %>">
            <%= center.healthCenterName %>
          </option>
        <% }) %>
      </select>
    </div>

    <button type="submit" class="btn btn-primary w-100">Sign Up</button>
  </form>
</div>