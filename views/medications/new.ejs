<%- include('../partials/_navbar.ejs') %>

<div class="container mt-5" style="max-width: 500px;">
  <h2 class="mb-4 text-center">Add New Medication</h2>

  <div class="card p-4">
    <form method="POST" action="/medications">
      <div class="mb-3">
        <label for="itemName" class="form-label">Item Name</label>
        <input 
          type="text" 
          class="form-control" 
          id="itemName" 
          name="itemName" 
          placeholder="Enter item name" 
          required>
      </div>

      <div class="mb-3">
        <label for="codeNumber" class="form-label">Code Number</label>
        <input 
          type="text" 
          class="form-control" 
          id="codeNumber" 
          name="codeNumber" 
          placeholder="Enter code number" 
          required>
      </div>

      <button type="submit" class="btn btn-primary w-100">Add Medication</button>
    </form>
  </div>
</div>
