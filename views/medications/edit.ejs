<%- include('../partials/_navbar.ejs') %>

<h1>Edit Medication</h1>

<% if (user.position === "Head of Pharmacy") { %>
  <form method="POST" action="/medications/<%= medication._id %>?_method=PUT">
    <label>Item Name</label><br>
    <input type="text" name="itemName" value="<%= medication.itemName %>" required><br><br>

    <label>Code Number</label><br>
    <input type="text" name="codeNumber" value="<%= medication.codeNumber %>" required><br><br>

    <button type="submit">Update Medication</button>
  </form>
<% } else { %>
  <p style="color:red;">Access Denied: Only Head of Pharmacy can edit medications.</p>
<% } %>
